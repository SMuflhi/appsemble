html(lang='en')
  base(href=`/`)
  meta(charset='utf-8')
  meta(name='viewport', content='initial-scale=1,minimum-scale=1,width=device-width')
  link(rel='shortcut icon' href='/favicon.ico')
  title Appsemble Editor
  each stylesheet in assets.filter(name => name.endsWith('.css'))
    link(rel='stylesheet' href=`/_/static/${stylesheet}`)
  div#app
    noscript
      header.header
        h1.title Appsemble
      p.message
        | JavaScript seems to be disabled.
        br
        | Please enable JavaScript in your browser settings.
  each script in assets.filter(name => name.endsWith('.js'))
    script(src=`/_/static/${script}`)
