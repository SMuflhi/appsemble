// This tsconfig should be extended by every workspace tsconfig.build.json, if the workspace is
// built directly using tsc.
{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "jsx": "react",
    "lib": ["esnext"],
    "module": "es2020",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "target": "es2019",
    "types": ["jest"]
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/dist"]
}
