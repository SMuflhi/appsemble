{
  "private": true,
  "workspaces": [
    "server",
    "app",
    "blocks/*",
    "editor",
    "packages/*"
  ],
  "scripts": {
    "block": "webpack --config config/webpack/block.js --mode production --env",
    "build": "webpack --config config/webpack/core.js --mode production",
    "start": "appsemble start",
    "initialize": "node -r esm server initialize --database-url mysql://root:password@localhost:3306/appsemble",
    "eslint": "eslint --format gitlab --max-warnings 0 --ext js,jsx,md .",
    "prettier": "prettier --list-different '{**/,}*.{json,md,yaml,yml}'",
    "stylelint": "stylelint .",
    "stylelint:rd": "stylelint . --report-needless-disables",
    "test": "jest"
  },
  "appsembleServer": {
    "webpackConfig": "config/webpack/block",
    "database-name": "appsemble",
    "database-user": "root",
    "database-password": "password"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint"
    ],
    "*.css": [
      "stylelint"
    ],
    "{**/,}*.{json,md,yaml,yml}": [
      "prettier --list-different"
    ]
  },
  "devDependencies": {
    "@appsemble/node-utils": "^1.0.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-inline-elements": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.2.0",
    "@kubernetes/client-node": "^0.7.2",
    "axios": "^0.18.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-react-intl-auto": "^1.4.0",
    "babel-plugin-transform-react-class-to-function": "^1.2.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.21",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-formatter-gitlab": "^1.0.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "~7.11.1",
    "file-loader": "^3.0.1",
    "fs-extra": "^7.0.1",
    "gitbook-cli": "^2.3.2",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-discard-font-face": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "prettier": "^1.15.3",
    "serviceworker-webpack-plugin": "^1.0.1",
    "style-search": "^0.1.0",
    "stylelint": "^9.9.0",
    "stylelint-color-format": "^0.2.0",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "stylelint-order": "^2.0.0",
    "stylelint-prettier": "^1.0.6",
    "surge": "^0.20.1",
    "svgo": "^1.1.1",
    "svgo-loader": "^2.2.0",
    "terser-webpack-plugin": "^1.2.1",
