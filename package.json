{
  "private": true,
  "workspaces": [
    "blocks/*",
    "packages/*"
  ],
  "scripts": {
    "block": "webpack --config config/webpack/block.js --mode production --env",
    "build:app": "webpack --config config/webpack/app.js --mode production",
    "build:editor": "webpack --config config/webpack/editor.js --mode production",
    "start": "appsemble start",
    "eslint": "eslint --format gitlab --max-warnings 0 --ext js,jsx,md,ts,tsx .",
    "prettier": "prettier --check '**/*.{html,json,md,yaml,yml}'",
    "stylelint": "stylelint .",
    "stylelint:rd": "stylelint --report-needless-disables .",
    "test": "jest"
  },
  "appsembleServer": {
    "webpackConfig": "config/webpack/block",
    "database-host": "localhost",
    "database-name": "appsemble",
    "database-user": "root",
    "database-password": "password"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint"
    ],
    "*.css": [
      "stylelint"
    ],
    "*.{html,json,md,yaml,yml}": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@appsemble/node-utils": "^1.0.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-inline-elements": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.3.1",
    "@kubernetes/client-node": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^1.2.0",
    "@typescript-eslint/parser": "^1.2.0",
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-react-intl-auto": "^1.6.0",
    "babel-plugin-transform-react-class-to-function": "^1.2.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "clean-webpack-plugin": "^1.0.1",
    "codecov": "^3.2.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-formatter-gitlab": "^1.0.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "fs-extra": "^7.0.1",
    "gitbook-cli": "^2.3.2",
    "gitlab-yarn-audit": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
